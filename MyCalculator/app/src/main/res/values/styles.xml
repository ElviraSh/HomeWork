<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ButtonOperation">
        <item name="android:background">@color/colorBackgroundNumber</item>
        <item name="android:textColor">@color/colorTextView</item>
        <item name="android:layout_marginEnd">1dp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonNum">
        <item name="android:background">@color/colorBackgroundButton</item>
        <item name="android:textColor">@color/colorTextView</item>
        <item name="android:layout_marginEnd">1dp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonC">

        <item name="android:background">@color/colorBackgroundButton</item>
        <item name="android:textColor">@color/C</item>
        <item name="android:layout_marginEnd">1dp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
